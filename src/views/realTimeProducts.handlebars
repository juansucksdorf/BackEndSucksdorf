<div class="form">
    <form action="/api/products" id="productForm" method="post" enctype="application/x-www-form-urlencoded">
        <legend>Agregar un producto</legend>
        <div>
            <label>Titulo:</label>
            <input type="text" id="productTitle" name="title">
        </div>
        <div>
            <label>Descripcion:</label>
            <input type="text" id="productDescription" name="description">
        </div>
        <div>
            
            <label>Precio:</label>
            <input type="text" id="productPrice" name="price">
        </div>
        <div>
            <label>Imagen:</label>
            <input type="text" id="productThumbnail" name="thumbnail">
        </div>
        <div>
            <label>Codigo:</label>
            <input type="text" id="productCode" name="code">
        </div>
        <div>
            <label>Estado:</label>
            <label>Verdadero:</label>
            <input type="radio" name="status" id="productStatusTrue">
            <label> Falso</label>
            <input type="radio" name="status" id="productStatusFalse">
        </div>
        <div>
            <label> stock:</label>
            <input type="number" id="productStock" name="stock">
        </div>
        <input type="submit" id="addProduct" value="agregar">

    </form>
</div>

<div class="container" id="productsFeed">
{{#each products}}
<div class="product">
    <h4>{{title}} </h4>
    <img src="{{thumbnail}}" alt="imagen de {{title}}">
    <div class="infoProduct">
        <p> {{description}} </p>
        <p>{{price}} </p>
        <p>{{stock}} </p>
        <p>{{code}} </p>
    </div>

</div>
{{/each}}
</div>